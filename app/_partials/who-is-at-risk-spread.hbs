<section id="who-is-at-risk-spread" class="{{prefix}}-m-who-is-at-risk-spread">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h2>
                    {{{ data.whoIsAtRiskSpread.title2 }}}
                </h2>
            </div>
            <div class="col-12">
                <h6>
                {{ data.whoIsAtRiskSpread.subtitle2 }}
                </h6>
            </div>
            <div class="col-12 swiper-container">
                <div class="{{ global.prefix }}-m-who-is-at-risk-spread__swiper">
                    <div class="swiper-wrapper">
                        {{#each data.whoIsAtRiskSpread.carouselContent }}
                        <div class="swiper-slide">
                            <img src="{{ this.image }}" alt="{{ this.caption }}" />
                            <p class="caption">{{{ this.caption }}}</p>
                        </div>
                        {{/each}}
                    </div>
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row images">
                {{#each data.whoIsAtRiskSpread.carouselContent }}
                    <div class="col-4">
                        <div class="row">
                            <div class="col"><img src="{{ this.image }}" alt="{{ this.caption }}" /></div>
                        </div>
                        <div class="row">
                            <div class="col"><p class="caption">{{{ this.caption }}}</p></div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
        {{> scroll-to-next data=data.whoIsAtRiskSpread.next_section}}
    </div>
</section>